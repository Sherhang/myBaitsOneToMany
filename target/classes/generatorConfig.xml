<!--            <generatedKey column="Id" sqlStatement="MySql"  identity="true"/>-->
<!--            <oneToMany mappingTable="product" column="categoryId" joinColumn="id"/>-->
<!--        </table>-->
<!--        &lt;!&ndash; 子表配置&ndash;&gt;-->
<!--        <table tableName="product" domainObjectName="Product">-->
<!--            <generatedKey column="Id" sqlStatement="MySql" identity="true" />-->
<!--        </table>-->
        <table tableName="parent_kind" mapperName="ParentKindMapper" domainObjectName="ParentKind">
            <generatedKey column="id" sqlStatement="MySql" identity="true" />
            <oneToMany mappingTable="kind" column="id" joinColumn="parent_kind_id"/>
        </table>
        <!--子表配置-->
        <table tableName="kind" domainObjectName="Kind">
            <generatedKey column="id" sqlStatement="MySql" identity="true" />
            <oneToMany mappingTable="tag" column="id" joinColumn="child_kind_id"/>
        </table>

        <table tableName="tag" domainObjectName="Tag">
            <generatedKey column="id" sqlStatement="MySql" identity="true" />
            <oneToMany mappingTable="site_tag" column="id" joinColumn="tag_id"/>
        </table>

        <table tableName="site_tag" domainObjectName="SiteTag">
            <generatedKey column="site_id" sqlStatement="MySql" identity="true" />
        </table>

        <table tableName="site" domainObjectName="Site">
            <generatedKey column="id" sqlStatement="MySql" identity="true" />
        </table>

    </context>
</generatorConfiguration>